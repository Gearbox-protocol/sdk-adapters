{
  "name": "@gearbox-protocol/sdk-adapters",
  "version": "0.0.0-semantic-release",
  "description": "Adapters plugin for Gearbox SDK",
  "license": "MIT",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "typings": "./dist/types/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "default": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "yarn build:types && yarn build:cjs && yarn build:esm",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist/types",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "build:esm": "tsc --module esnext --outDir dist/esm",
    "prepare": "husky",
    "check": "biome check --write",
    "check:ci": "biome check",
    "typecheck:ci": "tsc --noEmit"
  },
  "dependencies": {
    "@gearbox-protocol/integrations-v3": "1.42.0-abi.4",
    "viem": ">=2.23.15 <3.0.0"
  },
  "peerDependencies": {
    "@gearbox-protocol/sdk": ">=8.20.0 <9.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@gearbox-protocol/biome-config": "^1.0.0",
    "@gearbox-protocol/sdk": "^8.26.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "typescript": "^5.9.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx,json}": [
      "biome check --no-errors-on-unmatched --write"
    ]
  },
  "packageManager": "yarn@4.9.2"
}
